<BasicTooltipComponent Title="@Name">
    <img id="watching-icon-@Name" style="@style" class="watching-icon" src='@IconUrl' @onerror="OnIconError" />
</BasicTooltipComponent>

@code {

    [Parameter]
    public string IconUrl { get; set; }

    [Parameter]
    public string Name { get; set; }

    public string style;

    protected void OnIconError()
    {
        IconUrl = "_content/Valour.Client/icon-512.png";

        int r = Random.Shared.Next(24) * 15;

        style = $"filter: hue-rotate({r}deg) saturate(2)";

        StateHasChanged();
    }
}
