@code {
    [Inject] IJSRuntime JsRuntime { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("blazorFuncs.addKeyboardListenerEvent", DotNetObjectReference.Create(this));
        }
    }

    [JSInvokable]
    public Task OnKeyDown(object e)
    {
        return Task.CompletedTask;
    }
}